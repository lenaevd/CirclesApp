<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <!--    creating users table -->
    <changeSet id="1" author="lena">
        <createTable tableName="users">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="login" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="gender" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="date_of_birth" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="bio" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="image_url" type="text">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <!--    creating events table -->
    <changeSet id="2" author="lena">
        <createTable tableName="events">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="time_and_place_info" type="varchar(100)">
                <constraints nullable="true"/>
            </column>

            <column name="city" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="boolean">
                <constraints nullable="false"/>
            </column>

            <column name="max_members_count" type="smallint">
                <constraints nullable="false"/>
            </column>
            <column name="members_count" type="smallint">
                <constraints nullable="false"/>
            </column>
            <column name="image_url" type="text">
                <constraints nullable="true"/>
            </column>

        </createTable>
    </changeSet>

    <!--    creating types table -->
    <changeSet id="3" author="lena">
        <createTable tableName="types">
            <column name="id" type="smallint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!--    creating roles table -->
